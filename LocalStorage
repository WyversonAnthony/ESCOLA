<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Registrar Ocorrência</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f0f4f8;
      margin: 0;
      padding: 20px;
    }

    h1 {
      color: #2e86de;
      text-align: center;
    }

    form {
      background-color: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      width: 400px;
      margin: auto;
    }

    label {
      display: block;
      margin-bottom: 10px;
      font-size: 16px;
    }

    input, textarea {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    button {
      padding: 12px;
      background-color: #2e86de;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      width: 100%;
      font-size: 16px;
    }

    button:hover {
      background-color: #1b4f9b;
    }

    .message {
      color: green;
      font-weight: bold;
      text-align: center;
    }
  </style>
</head>
<body>

  <h1>Registrar Ocorrência</h1>

  <form id="formOcorrencia">
    <label for="aluno">Nome do Aluno</label>
    <input type="text" id="aluno" required />

    <label for="descricao">Descrição da Ocorrência</label>
    <textarea id="descricao" rows="4" required></textarea>

    <label for="data">Data</label>
    <input type="date" id="data" required />

    <button type="submit">Salvar Ocorrência</button>
  </form>

  <div class="message" id="messageSuccess"></div>

  <script>
    const formOcorrencia = document.getElementById('formOcorrencia');
    const messageSuccess = document.getElementById('messageSuccess');
    const STORAGE_KEY = 'ocorrenciasEscola';

    formOcorrencia.addEventListener('submit', (e) => {
      e.preventDefault();

      const aluno = document.getElementById('aluno').value.trim();
      const descricao = document.getElementById('descricao').value.trim();
      const data = document.getElementById('data').value;

      const novaOcorrencia = { aluno, descricao, data };

      let ocorrencias = JSON.parse(localStorage.getItem(STORAGE_KEY)) || [];
      ocorrencias.push(novaOcorrencia);

      localStorage.setItem(STORAGE_KEY, JSON.stringify(ocorrencias));

      formOcorrencia.reset();
      messageSuccess.innerHTML = '✅ Ocorrência registrada com sucesso!';
    });
  </script>

</body>
</html>
